<Window x:Class="ApiRestMoviles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApiRestMoviles"
        mc:Ignorable="d"
        Title="Lista moviles" Height="450" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button x:Name="btnCargar" Content="Cargar datos" Margin="20" Click="btnCargar_Click"/>
            <Button x:Name="btnAdd" Content="Añadir obajetos" Margin="20 20 20 20" Click="btnAdd_Click"/>
            <Button x:Name="btnCargarId" Content="Cargar por id" Margin=" 20 20 20 20" Click="btnCargarId_Click"/>
            <Button x:Name="btnDelet" Content="Borrar objeto" Margin="20 20 20 20" Click="btnDelet_Click"/>
        </StackPanel>

        <ListBox x:Name="listDatos" Grid.Row="1" Margin="20"/>

        <TextBox x:Name="txtPost" Text="Resultados del post aqui" Grid.Row="2" Height="100" Margin="20"/>

    </Grid>
</Window>
